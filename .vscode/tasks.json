{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run JavaScript with Input/Output",
            "type": "shell",
            "command": "node",
            "args": [
                "${file}",
                "<",
                "Input.txt",
                ">",
                "Output.txt"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
